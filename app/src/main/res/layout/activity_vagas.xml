    <EditText
        android:id="@+id/vagas_palavrachave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Palavra-chave do cargo..."/>

    <ListView
        android:id="@+id/vagas_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>